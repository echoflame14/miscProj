nav(ng-mouseleave="optHide = true;contHide = true; infoHide = true")
	ul#mainUl
		li#options.mainLi(ng-mouseenter="optHide = false; contHide = true; infoHide = true") Options
		li#contact.mainLi(ng-mouseenter="contHide = false; optHide = true; infoHide = true") Contact
		li#info.mainLi(ng-mouseenter="infoHide = false; optHide = true; contHide = true") Info
	.optionDisp(ng-hide="optHide")
		ul
			li(ng-click="rainHide = false; pinkHide = true; whiteHide = true") Rain
			li(ng-click="whiteHide = false; pinkHide = true; rainHide = true") White Noise
			li(ng-click="pinkHide = false; whiteHide = true; rainHide = true") Pink Noise
			li
				img(src="../nick.png", alt="n-cage")
		.player(ng-hide="rainHide")
			audio(src="../rain-03.mp3", loop="true" controls)
		.player(ng-hide="whiteHide")
			audio(src="../white.mp3", loop = "true" controls)

	.contact(ng-hide="contHide")
		h1 hey talk to me
	.info(ng-hide="infoHide")
		h1 INFORMATIVE
