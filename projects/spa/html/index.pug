doctype html
html(lang='en', ng-app="app")
	head
		title Insert title here
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1")
		link(rel='stylesheet', href='../css/master.css')
		link(rel='stylesheet', href='https://opensource.keycdn.com/fontawesome/4.6.3/font-awesome.min.css')

	body(ng-controller="ctrl")
		header
			#logo
				h1 p
			#hamburger
				i.fa.fa-bars

		#view
			ui-view




		#slide-ctrl
			h1.freqControls#freqBtn Frequency Control
				i.fa.fa-chevron-down#freqDownBtn
			h1.presets Presets
				i.fa.fa-chevron-down#prestsBtn


		footer
			#presets
				#sleep(ng-click="sleepMode()")
					a(ui-sref="sleep")
						h1 SLEEP
				#relax(ng-click="relaxMode()")
					a(ui-sref="relax")
						h1 RELAX
				#focus(ng-click="focusMode()")
					a(ui-sref="focus")
						h1 FOCUS
			#up-down-container
				#left
					section
						h1 LEFT
					.flexCol
						i.fa.fa-chevron-circle-up.up(ng-click="leftUp()")
						span(ng-model="leftHz") {{leftHz}}
						i.fa.fa-chevron-circle-down.down(ng-click="leftDown()")

				#right
					section
						h1 RIGHT
					.flexCol
						i.fa.fa-chevron-circle-up.up(ng-click="rightUp()")
						span(ng-model="rightHz") {{rightHz}}-Hz
						i.fa.fa-chevron-circle-down.down(ng-click="rightDown()")


			section.pause-play
				h1
					i.fa.fa-play#playBtn
					i.fa.fa-stop#pauseBtn
					i.fa.fa-volume-up#volumeBtn

			section.current-hz
				h1.border Current Frequency

				h1.freq {{currentHz}}-Hz





















		// Angular Cdn
		script(type="text/javascript", src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.7/angular.min.js")
		// ui-router
		script(type="text/javascript", src="../js/ui-router.js")
		// jquery Cdn
		script(src="http://code.jquery.com/jquery-3.1.0.min.js")
		// chart.js
		script(type="application/javascript", src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.1.6/Chart.bundle.min.js")
		// Angular files

		script(type="text/javascript", src="../js/app.js")
		script(type="text/javascript", src="../js/ctrl.js")
		script(type="text/javascript", src="../js/srvc.js")
		script(type="text/javascript", src="../js/dir.js")
		// Personal etc js
		script(type="text/javascript", src="../js/script.js")
