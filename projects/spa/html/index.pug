				.bar15.bar
				.bar16.bar
				.bar17.bar
				.bar18.bar
				.bar19.bar
				.bar20.bar




		#slide-ctrl
			h1.freqControls Frequency Control
				i.fa.fa-chevron-down#freqDownBtn
			h1.presets Presets
				i.fa.fa-chevron-down#prestsBtn


		footer
			#presets
				#sleep
					h1 SLEEP
				#relax
					h1 RELAX
				#focus
					h1 FOCUS
			#up-down-container
				#left
					i.fa.fa-chevron-circle-up.up
					h1 LEFT EAR
						span(ng-model="leftHz") 130Hz
					i.fa.fa-chevron-circle-down.down

				#right
					i.fa.fa-chevron-circle-up.up
					h1 RIGHT EAR
						span(ng-model="leftHz") 130hz
					i.fa.fa-chevron-circle-down.down

			section.pause-play
				i.fa.fa-stop
				i.fa.fa-play
			section.current-hz
				h1.border Current Frequency
				h1.freq 6Hz





















